@model CMCSPart2.Models.SupportingDocument
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Upload Supporting Document";
    var typeItems = ViewBag.DocumentTypes as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var claimItems = ViewBag.Claims as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold"><i class="fas fa-upload"></i> Upload Supporting Document</h2>
        <p class="text-muted">Attach files related to your claim</p>
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-success">@TempData["Info"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file-upload"></i> Submit Document
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="UploadDocument" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label class="form-label">Choose File</label>
                            <input name="file" type="file" class="form-control" accept=".pdf,.docx,.xlsx" />
                            <div class="form-text">Accepted: PDF, DOCX, XLSX (Max 10MB)</div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Document Type</label>
                            <select name="FileType" class="form-select" asp-items="typeItems">
                                <option value="">-- Select Type --</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Related Claim</label>
                            <select name="ClaimId" class="form-select" asp-items="claimItems">
                                <option value="">-- Select Claim --</option>
                            </select>
                        </div>

                        <div class="d-flex gap-2 mt-3">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="fas fa-upload"></i> Upload Document
                            </button>
                            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Dashboard</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4">
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Upload Guidelines:</h6>
                    <ul class="mb-0">
                        <li>Choose a file (PDF/DOCX/XLSX only, ≤ 10MB).</li>
                        <li>Select the correct Document Type and Related Claim.</li>
                        <li>Files are stored encrypted and decrypted only on download.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


