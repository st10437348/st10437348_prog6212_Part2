@model CMCS.Models.Lecturer

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Lecturer Dashboard</h2>
        <p class="text-muted">
            Welcome, <strong>@ViewBag.Username</strong> (Lecturer ID: <strong>@ViewBag.LecturerId</strong>
            Email: <strong>@Model.Email</strong>)
        </p>
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-success">@TempData["Info"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
    </div>

    <div class="row justify-content-center g-4">
        <div class="col-md-3">
            <a asp-action="Create" class="btn btn-primary w-100 py-3 shadow-sm d-flex flex-column align-items-center">
                <i class="fas fa-file-alt fa-2x mb-2"></i>
                Submit a Claim
            </a>
        </div>

        <div class="col-md-3">
            <a asp-action="UploadDocument" class="btn btn-success w-100 py-3 shadow-sm d-flex flex-column align-items-center">
                <i class="fas fa-upload fa-2x mb-2"></i>
                Upload Document
            </a>
        </div>

        <div class="col-md-3">
            <a asp-action="Details" class="btn btn-info w-100 py-3 shadow-sm d-flex flex-column align-items-center">
                <i class="fas fa-list fa-2x mb-2"></i>
                View My Claims
            </a>
        </div>

        <div class="col-md-3">
            <form asp-controller="Home" asp-action="Logout" method="post" class="w-100">
                <button type="submit" class="btn btn-secondary w-100 py-3 shadow-sm d-flex flex-column align-items-center">
                    <i class="fas fa-sign-out-alt fa-2x mb-2"></i>
                    Logout
                </button>
            </form>
        </div>
    </div>
</div>




