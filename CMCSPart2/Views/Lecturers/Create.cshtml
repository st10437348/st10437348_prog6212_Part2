@model CMCSPart2.Models.Claim

<h2>Submit Claim</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="HoursWorked">Hours Worked</label>
        <input asp-for="HoursWorked" class="form-control" type="number" step="0.25" min="0" />
    </div>
    <div class="form-group">
        <label asp-for="HourlyRate">Hourly Rate</label>
        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0" />
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes" class="form-control" placeholder="Optional notes for coordinator/manager..."></textarea>
    </div>
    <button type="submit" class="btn btn-success mt-3">Submit Claim</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left me-2"></i>Back to Dashboard</a>


