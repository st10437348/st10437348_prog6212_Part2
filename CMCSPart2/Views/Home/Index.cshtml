@model CMCSPart2.Models.UserAccount

<style>
    .gradient-bg {
        background: linear-gradient(135deg, #4f46e5, #3b82f6, #06b6d4);
        background-size: 400% 400%;
        animation: gradientBG 12s ease infinite;
        padding-top: 60px;
        padding-bottom: 60px;
    }

    @@keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .login-card {
        max-width: 420px;
        width: 100%;
        border-radius: 20px;
        background: #fff;
    }
</style>

<div class="gradient-bg">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
        <div class="card login-card shadow-lg p-4">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mb-3">@ViewBag.Error</div>
            }

            <div class="text-center mb-4">
                <i class="fas fa-chalkboard-teacher fa-4x text-primary"></i>
                <h2 class="mt-3 fw-bold">Contract Monthly Claim System</h2>
                <p class="text-muted">Sign in to continue</p>
            </div>

            <form asp-action="Index" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label">
                        <i class="fas fa-user me-2 text-secondary"></i> Username
                    </label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock me-2 text-secondary"></i> Password
                    </label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password (lecturer/coordinator/manager)" />
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Role" class="form-label">
                        <i class="fas fa-user-tag me-2 text-secondary"></i> Role
                    </label>
                    <select asp-for="Role" class="form-select">
                        <option value="Lecturer">Lecturer</option>
                        <option value="Coordinator">Coordinator</option>
                        <option value="Manager">Manager</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-sign-in-alt me-2"></i> Sign In
                </button>
            </form>
        </div>
    </div>
</div>



